    />
    <link rel="canonical" href={canonicalURL} />
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="description" content={summary} />

    <!-- Open Graph / Facebook -->
