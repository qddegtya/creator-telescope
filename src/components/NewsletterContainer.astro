---
import returnToListIcon from "../assets/return-to-list.svg";

interface Props {
  summary: string | undefined;
  id: string | undefined;
  date: Date | undefined;
}

const { summary, id, date } = Astro.props;
---

<div style="position: relative;padding-top: 48px;">
  <div style="position: absolute;top: -8px;left: 0;">
    <a href="/newsletter-list" title="返回列表页"
      ><img
        src={returnToListIcon.src}
        width="28"
        height="28"
        alt="Creator Telescope"
      /></a
    >
  </div>

  <header style="margin-bottom: 32px;padding-bottom: 24px;border-bottom: 1px solid rgba(0, 0, 0, 0.06);">
    <h1
      style="display: block;margin: 0 0 8px 0;width: 100%;text-align: center;color: #000000;font-size: 24px;font-weight: 600;line-height: 32px;word-break: break-all;word-wrap: break-word;"
    >
      {`Creator Telescope - ${id}`}
    </h1>

    <p
      style="display: block;margin: 0;width: 100%;text-align: center;color: #666666;font-size: 16px;padding-top: 0;font-weight: 400;line-height: 24px;word-break: break-all;word-wrap: break-word;"
    >
      {summary}
    </p>
  </header>

  <slot />

  <footer style="margin-top: 40px;padding-top: 24px;border-top: 1px solid rgba(0, 0, 0, 0.06);text-align: center;">
    <p
      style="display: block;font-size: 13px;color: #666666;font-weight: 400;margin: 0 0 8px 0;padding: 0;line-height: 18px;word-break: break-all;word-wrap: break-word;"
    >
      本周刊服务由 <a
        style="color: #000000;text-decoration: none;font-weight: 500;"
        title="Colorful"
        href="https://xiaoa.name"
        target="_blank">Archer</a
      > 创造
    </p>

    <p
      style="display: block;font-size: 12px;color: #999999;font-weight: 400;margin: 0;padding: 0;line-height: 16px;word-break: break-all;word-wrap: break-word;"
    >
      Created at: {date?.toLocaleDateString('zh-CN')}
    </p>
  </footer>
</div>
