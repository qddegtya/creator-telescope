---
interface Props {
  summary: string | undefined;
  id: string | undefined;
}

const { summary, id } = Astro.props;
---

<div>
  <h3
    style="display: block;margin: 0;width: 100%;text-align: center;color: #4e4e4e;font-size: 18px;border-bottom: 1px solid #f0f0f0;padding-bottom: 10px;font-weight: 200;word-break: break-all;word-wrap: break-word;"
  >
    {`Creator Telescope - ${id}`}
  </h3>

  <h4
    style="display: block;margin: 0;width: 100%;text-align: center;color: #999999;font-size: 14px;padding-top: 10px;font-weight: 200;word-break: break-all;word-wrap: break-word;"
  >
    {summary}
  </h4>

  <slot />

  <h3
    style="display: block;text-align: center;font-size: 12px;color: #999999;font-weight: 200;margin: 0;padding: 0;margin-top: 20px;word-break: break-all;word-wrap: break-word;"
  >
    审核 & 校验 By <a title="Colorful" href="https://xiaoa.name" target="_blank"
      >Archer</a
    >
  </h3>
</div>
