# ================================
# AI Agent 搜索系统环境配置示例
# ================================

# ================================
# DeepSeek API 配置
# ================================
# DeepSeek API 密钥 (必需)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# DeepSeek 模型配置
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_TEMPERATURE=0.3
DEEPSEEK_MAX_TOKENS=4000

# ================================
# Twitter/X 登录配置
# ================================
# Twitter 用户名或邮箱
TWITTER_USERNAME=您的Twitter用户名

# Twitter 密码
TWITTER_PASSWORD=您的Twitter密码

# Twitter 邮箱 (可选，某些情况下需要邮箱验证)
TWITTER_EMAIL=您的Twitter邮箱

# ================================
# GitHub API 配置
# ================================
# GitHub 个人访问令牌 (必需)
GITHUB_TOKEN=your_github_token_here

# GitHub API 基础 URL
GITHUB_API_URL=https://api.github.com

# ================================
# 浏览器池配置
# ================================
# 浏览器池大小 (1-20)
BROWSER_POOL_SIZE=5

# 是否启用无头模式
BROWSER_HEADLESS=true

# 浏览器超时时间 (毫秒)
BROWSER_TIMEOUT=30000

# 是否启用 User Agent 轮换
BROWSER_USER_AGENT_ROTATION=true

# ================================
# Worker 池配置
# ================================
# Worker 池大小 (1-50)
WORKER_POOL_SIZE=10

# Worker 超时时间 (毫秒)
WORKER_TIMEOUT=60000

# Worker 并发数 (1-10)
WORKER_CONCURRENCY=3

# ================================
# 搜索配置
# ================================
# 搜索超时时间 (毫秒)
SEARCH_TIMEOUT=45000

# 搜索重试次数
SEARCH_RETRY_ATTEMPTS=3

# 搜索速率限制 (每分钟请求数)
SEARCH_RATE_LIMIT=100

# ================================
# 质量过滤配置
# ================================
# 质量阈值 (0-1)
QUALITY_THRESHOLD=0.7

# 内容最低分数 (0-1)
CONTENT_MIN_SCORE=0.6

# 重复内容阈值 (0-1)
DUPLICATE_THRESHOLD=0.8

# ================================
# 缓存配置
# ================================
# 是否启用缓存
CACHE_ENABLED=true

# 缓存生存时间 (秒)
CACHE_TTL=3600

# 缓存最大大小
CACHE_MAX_SIZE=1000

# ================================
# 日志配置
# ================================
# 日志级别 (error, warn, info, debug)
LOG_LEVEL=info

# 是否启用文件日志
LOG_TO_FILE=true

# 日志文件目录
LOG_DIRECTORY=./logs

# ================================
# 性能监控配置
# ================================
# 是否启用监控
MONITORING_ENABLED=true

# 监控指标端口
METRICS_PORT=9090

# 健康检查间隔 (毫秒)
HEALTH_CHECK_INTERVAL=30000

# ================================
# 服务配置
# ================================
# 运行环境 (development, production, test)
NODE_ENV=development

# 服务端口
PORT=3000

# CORS 允许的源 (逗号分隔)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ================================
# 性能优化配置 (可选)
# ================================
# 内存限制 (MB)
# NODE_OPTIONS="--max-old-space-size=4096"

# V8 垃圾回收优化
# NODE_OPTIONS="--optimize-for-size --gc-interval=100"

# ================================
# 安全配置 (生产环境)
# ================================
# 是否启用 HTTPS
# HTTPS_ENABLED=false

# SSL 证书路径
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# JWT 密钥 (如果需要认证)
# JWT_SECRET=your_jwt_secret_here

# 加密密钥 (用于敏感数据加密)
# ENCRYPTION_KEY=your_32_character_encryption_key

# ================================
# 第三方服务配置 (可选)
# ================================
# Redis 配置 (如果启用分布式缓存)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password

# 数据库配置 (如果需要持久化)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Sentry 错误跟踪 (生产环境推荐)
# SENTRY_DSN=your_sentry_dsn_here

# ================================
# 配置说明
# ================================
# 1. 复制此文件为 .env 并填入实际值
# 2. 确保 .env 文件已添加到 .gitignore
# 3. 必需的环境变量：DEEPSEEK_API_KEY, GITHUB_TOKEN
# 4. 生产环境建议启用监控和日志记录
# 5. 根据服务器性能调整池大小和超时配置